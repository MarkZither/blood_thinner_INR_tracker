<Project>

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>13.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <!-- Allow NuGet warnings for RC2 preview packages -->
    <WarningsNotAsErrors>NU1605;NU1510</WarningsNotAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!--
      TEMPORARY SUPPRESSION: CS1591 (Missing XML comments)
      Reason: Large incoming feature work is producing many CS1591 warnings which obscure real build issues.
      ApprovedBy: feature-owner (automated approval for short-term suppression)
      ApprovedAt: 2025-11-16
      RemovalCondition: Remove this suppression when `specs/009-bug-fix-editing/issue-improve-api-docs.md` is closed
      TTL: 28 days
    -->
    <NoWarn>$(NoWarn);1591</NoWarn>

    <!-- Versioning -->
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>

    <!-- Code Analysis -->
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>

    <!-- Medical Application Security -->
    <RunAnalyzersDuringLiveAnalysis>true</RunAnalyzersDuringLiveAnalysis>
    <RunCodeAnalysis>false</RunCodeAnalysis>

    <!-- Performance -->
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <ConcurrentGarbageCollection>true</ConcurrentGarbageCollection>
  </PropertyGroup>

  <!-- Mobile-specific targets -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-android'">
    <SupportedOSPlatformVersion>21.0</SupportedOSPlatformVersion>
    <AndroidUseAapt2>true</AndroidUseAapt2>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-ios'">
    <SupportedOSPlatformVersion>11.0</SupportedOSPlatformVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-maccatalyst'">
    <SupportedOSPlatformVersion>13.1</SupportedOSPlatformVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-windows10.0.19041.0'">
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
  </PropertyGroup>

  <!-- Common package references for library projects only -->
  <ItemGroup Condition="'$(IsWebProject)' != 'true' AND '$(IsTestProject)' != 'true'">
    <!-- Microsoft.Extensions.Logging and Microsoft.Extensions.Configuration removed - included in ASP.NET Core -->
  </ItemGroup>

  <!-- Analyzer packages for code quality -->
  <ItemGroup>
        <!-- StyleCop Analyzers -->
    <PackageReference Include="SonarAnalyzer.CSharp" Version="9.16.0.82469" PrivateAssets="all" />
  </ItemGroup>

  <!-- Suppress copyright warnings for now -->
  <PropertyGroup>
    <NoWarn>$(NoWarn);SA1633</NoWarn>
    <_SkipUpgradeNetAnalyzersNuGetWarning>true</_SkipUpgradeNetAnalyzersNuGetWarning>
  </PropertyGroup>

</Project>
