<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodThinnerTracker.Mobile.Views.InrListView"
             Title="INR Logs">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="INR Test History" FontSize="24" FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding InrLogs}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Spacing="5" BackgroundColor="#f0f0f0" CornerRadius="8">
                        <Label Text="{Binding TestDate, StringFormat='Date: {0:MM/dd/yyyy}'}" FontAttributes="Bold" />
                        <Label Text="{Binding InrValue, StringFormat='INR: {0:F2}'}" />
                        <Label Text="{Binding Notes}" FontSize="12" TextColor="#666666" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--Button Text="Log New INR" Command="{Binding AddInrCommand}" /-->
    </StackLayout>

</ContentPage>
