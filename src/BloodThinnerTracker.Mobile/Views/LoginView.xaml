<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodThinnerTracker.Mobile.Views.LoginView"
             Title="Sign in">

    <StackLayout Padding="24" VerticalOptions="Center">
        <Label Text="Sign in to view your INR results" HorizontalOptions="Center" />
        <Button x:Name="SignInButton" Text="Sign in" Margin="0,20,0,0" />
        <ActivityIndicator x:Name="BusyIndicator" IsVisible="False" IsRunning="False" />
    </StackLayout>

</ContentPage>
