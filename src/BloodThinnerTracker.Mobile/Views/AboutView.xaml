<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodThinnerTracker.Mobile.Views.AboutView"
             Title="About"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackground}, Dark={StaticResource DarkModeBackground}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Title -->
            <Label
                Text="Blood Thinner Tracker"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeText}}" />

            <!-- Version -->
            <Label
                Text="Version 1.0.0"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light={StaticResource TextMedium}, Dark={StaticResource DarkModeTextSecondary}}" />

            <!-- Description -->
            <Frame BorderColor="{StaticResource BorderGray}" CornerRadius="10" Padding="15" Margin="0,10"
                   BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundWhite}, Dark={StaticResource DarkModeCardBackground}}">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="About This App"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeText}}" />

                    <Label
                        Text="Blood Thinner Tracker is a medical companion app designed to help patients monitor their blood thinner medication and INR (International Normalized Ratio) levels."
                        FontSize="12"
                        LineBreakMode="WordWrap"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeTextSecondary}}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Features -->
            <Frame BorderColor="{StaticResource BorderGray}" CornerRadius="10" Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundWhite}, Dark={StaticResource DarkModeCardBackground}}">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Features"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeText}}" />

                    <Label
                        Text="• OAuth2 Authentication (Azure AD, Google)"
                        FontSize="12"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeTextSecondary}}" />

                    <Label
                        Text="• Track Medication Dosages"
                        FontSize="12"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeTextSecondary}}" />

                    <Label
                        Text="• Monitor INR Levels"
                        FontSize="12"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeTextSecondary}}" />

                    <Label
                        Text="• Secure Local Storage"
                        FontSize="12"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeTextSecondary}}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Legal -->
            <Frame BorderColor="{StaticResource BorderGray}" CornerRadius="10" Padding="15"
                   BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundWhite}, Dark={StaticResource DarkModeCardBackground}}">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Medical Disclaimer"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeText}}" />

                    <Label
                        Text="This app is for informational purposes only and should not be used as a substitute for professional medical advice. Always consult with your healthcare provider regarding medication management and INR monitoring."
                        FontSize="12"
                        LineBreakMode="WordWrap"
                        TextColor="{AppThemeBinding Light={StaticResource TextDark}, Dark={StaticResource DarkModeTextSecondary}}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Footer -->
            <Label
                Text="© 2025 Blood Thinner Tracker"
                FontSize="11"
                HorizontalOptions="Center"
                Margin="0,20"
                TextColor="{AppThemeBinding Light={StaticResource TextLight}, Dark={StaticResource DarkModeTextSecondary}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
