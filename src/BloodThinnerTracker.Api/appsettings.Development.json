{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "BloodThinnerTracker": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=bloodtracker_dev.db;Cache=Shared;",
    "PostgreSQLConnection": "Host=localhost;Port=5432;Database=bloodtracker_dev;Username=bloodtracker_dev;Password=dev_password;Pooling=true;"
  },
  "Database": {
    "Provider": "SQLite",
    "EncryptionKey": "dev-encryption-key-not-for-production",
    "PostgreSQL": {
      "Server": "localhost",
      "Port": "5432",
      "Database": "bloodtracker_dev",
      "Username": "bloodtracker_dev",
      "Password": "dev_password"
    }
  },
  "MedicalApplication": {
    "DataRetentionDays": 365,
    "AuditLogRetentionDays": 730,
    "RequireEncryption": false,
    "EnableAuditLogging": true
  },
  "Security": {
    "RequireHttps": false,
    "EnableDataProtection": true,
    "KeyRotationDays": 30,
    "RequireAuthentication": false,
    "EnableCors": true,
    "AllowedOrigins": [
      "https://localhost:7001",
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "development-secret-key-for-medical-app-testing-only-256-bits",
      "Issuer": "BloodThinnerTracker.Api.Dev",
      "Audience": "BloodThinnerTracker.Clients.Dev",
      "AccessTokenExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 30,
      "RequireHttpsMetadata": false
    },
    "AzureAd": {
      "Instance": "https://login.microsoftonline.com/",
      "TenantId": "dev-tenant-id",
      "ClientId": "dev-client-id",
      "ClientSecret": "dev-client-secret",
      "CallbackPath": "/signin-oidc",
      "Scopes": ["openid", "profile", "email"]
    },
    "Google": {
      "ClientId": "dev-google-client-id",
      "ClientSecret": "dev-google-client-secret",
      "CallbackPath": "/signin-google",
      "Scopes": ["openid", "profile", "email"]
    },
    "MedicalSecurity": {
      "RequireMfa": false,
      "MaxFailedLoginAttempts": 10,
      "LockoutDurationMinutes": 5,
      "RequirePasswordComplexity": false,
      "MinPasswordLength": 6,
      "SessionTimeoutMinutes": 120,
      "RequireDeviceRegistration": false,
      "EnableAuditLogging": true
    }
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true,
      "TimeoutSeconds": 10
    },
    "Memory": {
      "Enabled": false
    }
  },
  "DeveloperSettings": {
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": false,
    "ShowMedicalDisclaimer": true,
    "SimulateSlowQueries": false,
    "EnableSwaggerUI": true
  }
}
