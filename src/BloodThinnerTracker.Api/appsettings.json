{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "BloodThinnerTracker": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/tmp/bloodtracker_dev.db;Cache=Shared;",
    "PostgreSQLConnection": ""
  },
  "Database": {
    "Provider": "SQLite",
    "EncryptionKey": "",
    "PostgreSQL": {
      "Server": "localhost",
      "Port": "5432",
      "Database": "bloodtracker_production",
      "Username": "bloodtracker_user",
      "Password": ""
    }
  },
  "MedicalApplication": {
    "Name": "Blood Thinner Medication & INR Tracker",
    "Version": "1.0.0",
    "ComplianceLevel": "Healthcare",
    "DataRetentionDays": 2555,
    "AuditLogRetentionDays": 3650,
    "RequireEncryption": true,
    "EnableAuditLogging": true,
    "MedicalDisclaimer": "⚠️ This software is for informational purposes only and should not replace professional medical advice. Always consult with your healthcare provider regarding your medication schedule."
  },
  "Security": {
    "RequireHttps": true,
    "EnableDataProtection": true,
    "KeyRotationDays": 90,
    "RequireAuthentication": true,
    "EnableCors": true,
    "AllowedOrigins": [
      "https://localhost:7001",
      "https://bloodtracker.com",
      "https://dev.bloodtracker.com",
      "https://staging.bloodtracker.com"
    ]
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "YourVerySecureSecretKeyForMedicalApplicationThatIsAtLeast256Bits",
      "Issuer": "BloodThinnerTracker.Api",
      "Audience": "BloodThinnerTracker.Clients",
      "AccessTokenExpirationMinutes": 15,
      "RefreshTokenExpirationDays": 7,
      "RequireHttpsMetadata": true
    },
    "AzureAd": {
      "Instance": "https://login.microsoftonline.com/",
      "TenantId": "",
      "ClientId": "",
      "ClientSecret": "",
      "CallbackPath": "/signin-oidc",
      "Scopes": ["openid", "profile", "email"]
    },
    "Google": {
      "ClientId": "",
      "ClientSecret": "",
      "CallbackPath": "/signin-google",
      "Scopes": ["openid", "profile", "email"]
    },
    "MedicalSecurity": {
      "RequireMfa": false,
      "MaxFailedLoginAttempts": 3,
      "LockoutDurationMinutes": 30,
      "RequirePasswordComplexity": true,
      "MinPasswordLength": 12,
      "SessionTimeoutMinutes": 30,
      "RequireDeviceRegistration": false,
      "EnableAuditLogging": true
    }
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true,
      "TimeoutSeconds": 30
    },
    "Memory": {
      "Enabled": true,
      "ThresholdMB": 1024
    }
  }
}
