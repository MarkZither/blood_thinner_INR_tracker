    }
  },
  "ConnectionStrings": {
    "SqlServerConnection": "Server=tcp:bloodtracker.database.windows.net,1433;Database=bloodtracker_prod;User ID=bloodtracker_admin;Password=<YOUR_PASSWORD>;Encrypt=true;TrustServerCertificate=false;Connection Timeout=30;MultipleActiveResultSets=true;"
