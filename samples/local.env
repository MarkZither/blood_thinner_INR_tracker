# Development Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=Data Source=bloodtracker-dev.db
REDIS_URL=localhost:6379

# Authentication
JWT_SECRET=DEVELOPMENT-JWT-SECRET-CHANGE-ME-32-CHARACTERS-MINIMUM!
JWT_EXPIRATION_MINUTES=60

# Azure AD OAuth2
AZURE_AD_TENANT_ID=your-azure-tenant-id
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_DOMAIN=yourdomain.onmicrosoft.com

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Encryption Keys (32 characters minimum)
AES_ENCRYPTION_KEY=DEV-AES-KEY-32-CHARACTERS-MINIMUM!
HMAC_INTEGRITY_KEY=DEV-HMAC-KEY-32-CHARACTERS-MINIMUM

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001,https://localhost:5001
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=200
RATE_LIMIT_MEDICATION_LOGGING=20
RATE_LIMIT_AUTHENTICATION=10

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
ENABLE_SEED_DATA=true
REQUIRE_HTTPS=false

# Medical Safety Settings
MEDICATION_SAFETY_WINDOW_HOURS=12
MAX_DAILY_MEDICATION_LOGS=10
ALLOW_EMERGENCY_OVERRIDE=true

# INR Settings
INR_MIN_VALUE=0.5
INR_MAX_VALUE=8.0
INR_DEFAULT_TARGET_MIN=2.0
INR_DEFAULT_TARGET_MAX=3.0

# Notifications
NOTIFICATION_PROVIDER=Development
NOTIFICATION_MOCK_DELIVERY=true
NOTIFICATION_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=Information
LOG_LEVEL_MICROSOFT=Warning
LOG_LEVEL_EF_CORE=Information

# Health Checks
HEALTH_CHECKS_ENABLED=true
HEALTH_CHECKS_ENDPOINT=/health
HEALTH_CHECKS_DETAILED=true

# Development URLs
API_BASE_URL=http://localhost:5000
WEB_BASE_URL=http://localhost:5001
SWAGGER_URL=http://localhost:5000/swagger

# Development Database Connection (SQLite)
# For PostgreSQL development, use:
# DATABASE_URL=Host=localhost;Database=bloodtracker_dev;Username=dev_user;Password=dev_password;SSL Mode=Prefer;

# Email Settings (Development - uses file provider)
EMAIL_PROVIDER=File
EMAIL_FILE_PATH=./emails/
EMAIL_FROM_ADDRESS=noreply@bloodtracker-dev.local
EMAIL_FROM_NAME=Blood Thinner Tracker (Dev)

# Storage (Development - uses local file system)
STORAGE_PROVIDER=FileSystem
STORAGE_PATH=./uploads/
STORAGE_MAX_FILE_SIZE_MB=10

# Security Headers (Development - relaxed)
SECURITY_HSTS_MAX_AGE=0
SECURITY_CONTENT_SECURITY_POLICY=default-src 'self' 'unsafe-inline' 'unsafe-eval'
SECURITY_X_FRAME_OPTIONS=SAMEORIGIN

# Monitoring (Development - disabled)
APPLICATION_INSIGHTS_ENABLED=false
APPLICATION_INSIGHTS_INSTRUMENTATION_KEY=

# Redis Cache (Development - optional)
REDIS_ENABLED=false
REDIS_CONNECTION_STRING=localhost:6379
REDIS_INSTANCE_NAME=BloodTrackerDev

# Background Jobs (Development - in-memory)
BACKGROUND_JOBS_PROVIDER=InMemory
BACKGROUND_JOBS_CONNECTION_STRING=

# External Services (Development - mocked)
EXTERNAL_SERVICES_MOCK=true
PHARMACY_API_ENABLED=false
LAB_INTEGRATION_ENABLED=false